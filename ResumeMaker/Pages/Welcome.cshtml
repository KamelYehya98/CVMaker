@page "{handler?}"
@model ResumeMaker.Pages.WelcomeModel
@{
    ViewData["Title"] = "Home page";
}
@using Models;
@addTagHelper AuthoringTagHelpers.TagHelpers.E*, AuthoringTagHelpers
@addTagHelper AuthoringTagHelpers.TagHelpers.Email*, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<style>
    .card {
        opacity: 0.95;
    }
    .links {
        color: white;
    }
    .links:hover {
        color: lightgray !important;
    }
    a {
        text-decoration: none !important;
    }
    @@media only screen and (min-width: 0px) and (max-width: 767px) {
        .wow , #header{
            font-size: 1.7em;
        }
    }

    @@media only screen and (min-width: 768px) {
        .wow, #header {
            font-size: 2.4em;
        }
    }
</style>

@if (Model.ResumeInfos.Count > 0)
{
    <div class="d-flex flex-column justify-content-center align-items-center mt-5">
        <div class="card col-md-10 bg-dark">
            <div class="card-body">
                <span class="card-text m-3" style="color: lightgray;" id="header">
                    My Resumes
                </span>
                <table class="table table-striped table-borderless table-dark m-3 w-100">
                    <thead class="font-weight-bold">
                        <tr class="row w-100">
                            <td class="col-md-3 col-12 text-left" style="color: lightgray;">Name</td>
                        </tr>
                    </thead>
                    <tbody class="font-weight-lighter">
                        @foreach (ResumeInfo Info in Model.ResumeInfos)
                        {

                            <tr class="row w-100 align-items-center">
                                @{
                                    var FullName = Info.FirstName + " " + Info.LastName;
                                }
                                <td class="col-md-3 col-12 text-md-left text-center">
                                    <span>@FullName</span>
                                </td>
                                <td class="col-md-3 col-4 text-right">
                                    <a class="links" asp-page="/Edit" asp-route-id="@Info.ResumeInfoID">Edit</a>
                                </td>
                                <td class="col-md-3 col-4 text-right">
                                    <a class="links" asp-page="/GenerateResume" asp-page-handler="" asp-route-id="@Info.ResumeInfoID">Details</a>
                                </td>
                                <td class="col-md-3 col-4 text-right">

                                    <a asp-page="/Delete" asp-route-id="@Info.ResumeInfoID">
                                        <input type="button" class="btn btn-danger btn-sm" value="Delete">
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="row w-100">
                            <td class="col-12">
                                <form method="post">
                                    <input type="submit" value="ADD RESUME" asp-page="ResumeForm" class=" mt-3 btn btn-info btn-sm w-100" />
                                </form>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}

@if (Model.ResumeInfos.Count == 0)
{
<div class="card bg-dark d-flex flex-column align-items-center justify-content-center col-8 offset-2 mt-5">
    <span class="wow text-light mb-5 mt-3">Wow, such empty</span>
    <span class="text-light text-center" style="opacity: 0.95; font-size: x-large;">You don't have any resumes yet.</span>
    <form method="post">
        <input type="submit" class="btn btn-primary mb-3 mt-2" value="Create Resume" />
    </form>
</div>
}


